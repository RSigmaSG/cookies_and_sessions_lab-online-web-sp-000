<form action="/add">
    <input type="text" name="product" id="product">
    <input type="submit" id="add to cart">
</form>
<ul>
    <% if cart != nil %>
        <% cart.each do |product| %>
            <li><%= product %></li>
        <% end %>
    <% else %>
        Your cart is empty
    <% end %>
</ul>